{
  "name": "BizObs Generator - Cloud Ready with OneAgent",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:20",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20"
    }
  },
  "forwardPorts": [8080, 3000, 8099, 8100, 8101],
  "portsAttributes": {
    "8080": {"label": "BizObs App", "onAutoForward": "openBrowser"},
    "3000": {"label": "MCP Server", "onAutoForward": "silent"}
  },
  "postCreateCommand": "npm install",
  "postStartCommand": "bash -c 'if [ -f .devcontainer/install-oneagent.sh ]; then bash .devcontainer/install-oneagent.sh; fi'",
  "remoteEnv": {
    "CLOUD_MODE": "true",
    "NODE_ENV": "development",
    "DT_ENVIRONMENT": "${localEnv:DYNATRACE_URL}",
    "DT_PAAS_TOKEN": "${localEnv:DYNATRACE_TOKEN}"
  },
  "secrets": {
    "DYNATRACE_URL": {
      "description": "Your Dynatrace environment URL (e.g., https://abc12345.sprint.apps.dynatracelabs.com)"
    },
    "DYNATRACE_TOKEN": {
      "description": "Dynatrace PaaS token for OneAgent installation (scope: PaaS integration - Installer download)"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.vscode-json",
        "bradlc.vscode-tailwindcss",
        "ms-vscode.vscode-typescript-next"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  }
}